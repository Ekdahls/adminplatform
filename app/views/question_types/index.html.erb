<p id="notice"><%= notice %></p>

<h1>Frågetyper</h1>
<%= search_form_for @q do |f| %>
  <form class="form-inline">
    <div class="form-group">
      <%= f.search_field :question_type_name_cont,
      class: 'form-control', placeholder: 'Sök...' %>
    </div>
    <button type="submit" class='btn btn-primary'>Sök fråga</button>
  </form>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th><%= sort_link(@q, :question_type_name, 'Frågetyp') %></th>
      <th>Redigera</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_types.each do |question_type| %>
      <tr>
        <td><%= question_type.question_type_name %></td>
        <td><%= link_to 'Visa', question_type %> |
        <%= link_to 'Redigera', edit_question_type_path(question_type) %> |
        <%= link_to 'Radera', question_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= search_form_for @q do |f| %>

  <%= f.label :question_type_name_cont %>
  <%= f.search_field :question_type_name_cont %>

  <%= f.submit %>
<% end %>
<%= paginate @question_types %>
<br>
<%= link_to 'New Question type', new_question_type_path %>
