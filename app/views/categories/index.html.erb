<p id="notice"><%= notice %></p>

<h1>Kategorier</h1>
<br>
<%= search_form_for @q do |f| %>
  <form class="form-inline">

<!--searchfield-->
     <div class="input-group">
      <%= f.search_field :category_name_cont,
      class: 'form-control', placeholder: 'Sök...' %>
       <span class="input-group-btn" id="search.btn-addon"><button type="submit" class='btn btn-primary'>Sök Kategori</button></span>
    </div>
  </form>
<% end %>
<table class="table">
  <thead>
    <tr>
    <!--sort links for table names-->
      <th><%= sort_link(@q, :category_name, 'Kategori') %></th>
      <th><%= sort_link(@q, :category_hex_code, 'Hexkod') %></th>
      <th>Redigera</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <!--show a list of categories in database-->
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category_name %></td>
        <td><%= category.category_hex_code%></td>
        <td><%= link_to 'Visa', category %> |
        <%= link_to 'Redigera', edit_category_path(category) %> |
        <%= link_to 'Radera', category, method: :delete, data: { confirm: 'Tar du bort denna kategori kommer alla frågor som tillhör kategorin bli kategorilösa. Vill du ta bort?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!--paginate makes several pages instead of a long list of categories-->
<%= paginate @categories %>
