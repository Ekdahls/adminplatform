<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Question name</th>
      <th>C answer</th>
      <th>Alt1</th>
      <th>Alt2</th>
      <th>Alt3</th>
      <th>News url</th>
      <th>Img url</th>
      <th>Tag</th>
      <th>News summary</th>
      <th>Category</th>
      <th>Question type</th>
      <th>Valid from</th>
      <th>Valid to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.question_name %></td>
        <td><%= question.c_answer %></td>
        <td><%= question.alt1 %></td>
        <td><%= question.alt2 %></td>
        <td><%= question.alt3 %></td>
        <td><%= question.news_url %></td>
        <td><%= question.img_url %></td>
        <td><%= question.tag %></td>
        <td><%= question.news_summary %></td>
        <td><%= question.category_id %></td>
        <td><%= question.question_type_id %></td>
        <td><%= question.valid_from %></td>
        <td><%= question.valid_to %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= search_form_for @q do |f| %>

  <%= f.label :question_name_cont %>
  <%= f.search_field :question_name_cont %>

  <%= f.submit %>
<% end %>
<br>
<%= link_to 'Json', api_questions_path %>
<%= link_to 'New Question', new_question_path %>
